<% content_for :header do %>
  <section class="hero is-warning">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Browse the latest options
        </h1>
      </div>
    </div>
  </section>
<% end  %>
<div class="item-index-grid pt4">
  <% @items.each do |item| %>
    <div class="item border-light">
      <%= link_to image_tag(item.image_url(:thumb)), item %>
    </div>
  <% end %>
</div>
