<% content_for :header do %>
  <section class="hero is-info">
    <div class="hero-body">
      <div class="container">
        <h1 class="title text-center">
          Browse the latest options
        </h1>
      </div>
    </div>
  </section>
<% end  %>
<div class="item-index-grid pt4">
  <% @items.each do |item| %>
    <div class="item border border-secondary ma2">
      <div class="item-container">
        <div class="condition">
          <span class="condition-tag tag is-dark"><%= item.condition %></span>
        </div>
        <div class="item-thumb">
          <%= link_to image_tag(item.image_url(:thumb)), item %>
        </div>
      </div>
      <div class="info-container">
        <div class="pa3 info-items">
          <h3 class="fw7 f4 title"><%= item.title %></h3>
          <p class="has-text-gray fg pt1 sold-by">Sold by: <%= item.user.name %></p>
          <p class="f3 fw6 has-text-right pt2 price"><%= number_to_currency(item.price) %></p>
          <% if item_author(item) %>
            <div class="owner-buttons">
              <%= link_to 'Edit', edit_item_path(item), class: "button is-small" %>
              <%= link_to 'Delete', item, method: :delete, data: { confirm: "Are you sure?"}, class: "button is-small" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
