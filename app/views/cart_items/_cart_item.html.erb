<div class="columns align-items-center">
  <div class="column is-1">
    <%= cart_item.quantity %>
  </div>
  <div class="column is-2">
    <figure class="is-128x128 image">
      <%= image_tag(cart_item.item.image_url(:thumb)) %>
    </figure>
  </div>
  <div class="column is-9">
    <strong><%= cart_item.item.title %></strong>
    <div class="column align-items-center">
      <div class="content column is-9">
        <%= truncate(cart_item.item.description, length: 140) %>
      </div>
      <div class="has-text-right column is-2">
        <strong class="f4"><%= number_to_currency(cart_item.total_price) %></strong>
      </div>
    </div>
  </div>
</div>
<div class="has-text-right">
  <%= link_to 'Remove Item', cart_item, method: :delete, data: { confirm: "Are you sure about that?"}, class: "button is-small mb4"%>
</div>
<hr/>
